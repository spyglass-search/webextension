{

  "manifest_version": 2,
  "name": "Spyglass",
  "version": "1.0",

  "description": "Sync bookmarks and add URLs to your personal search engine.",
  "homepage_url": "https://github.com/a5huynh/spyglass",

  "icons": {
    "48": "dist/icons/border-48.png",
    "96": "dist/icons/border-96.png"
  },

  "permissions": [
    "activeTab",
    "bookmarks",
    "history",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "dist/icons/border-48.png",
    "default_title": "Spyglass",
    "default_popup": "dist/popup/add_uri.html"
  }
}

